<nav>
  <%= link_to "All Pets", "/pets" %>
  <%= link_to "All Shelters", "/shelters" %>
</nav>
<content>
  <h1>Update Pet</h1>

  <%= form_tag("/pets/#{@pet.id}", method: :patch) do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, @pet.name %>
    <br>
    <%= label_tag :age %>
    <%= text_field_tag :age, @pet.age %>
    <br>
    <%= label_tag :sex %>
    <%= text_field_tag :sex, @pet.sex %>
    <br>
    <%= label_tag :description %>
    <%= text_field_tag :description, @pet.description %>
    <br>
    <%= label_tag :adoptable_status %>
    <%= text_field_tag :adoptable_status, @pet.adoptable_status %>
    <br>
    <%= label_tag :image %>
    <%= text_field_tag :image, @pet.image %>
    <br>
    <%= submit_tag 'Update Pet' %>
  <% end %>
</content>
