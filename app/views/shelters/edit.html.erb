<h1>Update Shelter</h1>

<form action="/shelters/<%= @shelter.id %>/edit" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <label for="name">Name: </label>
  <input type="text" id = "name" name="Name" value="<%= @shelter.name %>" /><br>
  <label for="address">Address: </label>
  <input type="text" id = "address" name="Address" value="<%= @shelter.address %>"/><br>
  <label for="city">City: </label>
  <input type="text" id = "city" name="City" value="<%= @shelter.city %>"/><br>
  <label for="state">State: </label>
  <input type="text" id = "state" name="State" value="<%= @shelter.state %>"/><br>
  <label for="zip">ZIP: </label>
  <input type="text" id = "zip" name="ZIP Code" value="<%= @shelter.zip %>"/><br>
  <input type="submit" value = "Update Shelter"/>
</form>
